<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <StuntsIntermediateCodeGenPath>$([MSBuild]::MakeRelative($(MSBuildProjectDirectory), $([MSBuild]::NormalizePath('$(IntermediateOutputPath)Stunts/'))))</StuntsIntermediateCodeGenPath>
  </PropertyGroup>

  <ItemGroup>
     <Clean Include="$(StuntsIntermediateCodeGenPath)*$(DefaultLanguageSourceExtension)" /> 
  </ItemGroup>

  <Target Name="_AddStuntsDesignTimeAnalyzers" BeforeTargets="CoreCompile" Condition="'$(DesignTimeBuild)' == 'true'">
    <ItemGroup>
      <!-- CodeFix analyzers should only be added to DTBs since they depend on 
         editor features that are not available from csc/vbc -->
      <Analyzer Include="@(CodeFix)" />
    </ItemGroup>
  </Target>

  <Target Name="_AddStuntsToCoreCompile" BeforeTargets="CoreCompile">
    <ItemGroup>
      <Compile Remove="@(Compile)" Condition="$([MSBuild]::ValueOrDefault('%(RelativeDir)', '').StartsWith($(StuntsIntermediateCodeGenPath)))" />
      <Compile Include="$(StuntsIntermediateCodeGenPath)*$(DefaultLanguageSourceExtension)" />
    </ItemGroup>
  </Target>

</Project>